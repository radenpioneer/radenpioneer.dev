---
import Layout from './layout.astro'
import { MazeWide } from '~/components/maze'

export interface Props {
  title: string
  subtitle?: string | undefined
  description?: string | undefined
}

const { title, subtitle, description } = Astro.props
---

<Layout title={title} description={description}>
  <section class="container">
    <div class="_maze">
      <MazeWide />
    </div>
    <article class="_article">
      <h1 class="_title">{title}</h1>
      {subtitle && <p class="_subtitle">{subtitle}</p>}
      <slot />
    </article>
  </section>
</Layout>

<style lang="scss">
  @use '../styles/fonts';

  section {
    padding-top: 8rem;
    position: relative;
    overflow-x: hidden;
  }

  ._article {
    max-width: 65ch;

    :global(p) :global(img) {
      padding-left: 2rem;
      padding-right: 2rem;
      max-height: 250px;
    }
  }

  ._title {
    @extend %heading;
    --font-size: 2.5rem;
    --typography-spacing-vertical: 1rem;
    line-height: 110%;

    --color: transparent;
    background-image: linear-gradient(
      to right,
      var(--primary) 5%,
      var(--secondary) 95%
    );
    background-clip: text;
  }

  ._subtitle {
    --font-size: 1.5rem;
  }

  ._maze {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: -1;
    margin-left: calc(var(--spacing) * -1);
    margin-right: calc(var(--spacing) * -1);
    user-select: none;
    opacity: 10%;
    transform: translate(0, -20%);
  }

  @media (min-width: 992px) {
    ._title {
      --font-size: 4rem;
      --typography-spacing-vertical: 1.5rem;
      line-height: 125%;
    }

    ._subtitle {
      --font-size: 1.75rem;
    }

    ._maze {
      transform: translate(0, -50%);
    }
  }
</style>
