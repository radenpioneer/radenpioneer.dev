---
import type { GetImageResult } from 'astro'
import Layout from './layout.astro'
import Image from '~/components/image'
import { MazeWide } from '~/components/maze'

export interface Props {
  title: string
  subtitle?: string | undefined
  description?: string | undefined
  image?: GetImageResult | undefined
}

const { title, subtitle, description, image } = Astro.props
---

<Layout title={title} description={description}>
  <!-- Head -->
  <Fragment slot="head">
    {image && <link rel="preload" as="image" href={image.src} />}
  </Fragment>

  <!-- Page's main body -->
  <Fragment>
    <section class="container">
      <div class="_maze">
        <MazeWide />
      </div>
      <article class="_article">
        <h1 class="_title">{title}</h1>
        {subtitle && <p class="_subtitle">{subtitle}</p>}
        {
          image && (
            <p class="_image">
              <Image image={image} alt={title} />
            </p>
          )
        }
        <slot />
      </article>
    </section>
  </Fragment>
</Layout>

<style lang="scss">
  @use '../styles/fonts';

  section {
    padding-top: 8rem;
    position: relative;
    overflow-x: hidden;
  }

  ._article {
    --h1-color: var(--primary);
    --h2-color: var(--primary);
    --h3-color: var(--primary);
    --h4-color: var(--primary);

    max-width: 65ch;

    :global(p:not('._image')) :global(img) {
      padding-left: 2rem;
      padding-right: 2rem;
      max-height: 250px;
    }

    :global(.astro-code) {
      padding: var(--spacing);
    }
  }

  ._title {
    @extend %heading;
    --font-size: 2.5rem;
    line-height: 110%;

    --color: transparent;
    background-image: linear-gradient(
      to right,
      var(--primary) 5%,
      var(--secondary) 95%
    );
    background-clip: text;
  }

  ._subtitle {
    --font-size: 1.5rem;
  }

  ._image {
    margin-left: calc(var(--spacing) * -1);
    margin-right: calc(var(--spacing) * -1);
    :global(img) {
      object-fit: cover;
    }
  }

  ._maze {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: -1;
    margin-left: calc(var(--spacing) * -1);
    margin-right: calc(var(--spacing) * -1);
    user-select: none;
    opacity: 10%;
    transform: translate(0, -20%);
  }

  @media (min-width: 992px) {
    ._title {
      --font-size: 4rem;
      line-height: 125%;
    }

    ._subtitle {
      --font-size: 1.75rem;
    }

    ._image {
      margin-left: 0;
      margin-right: 0;
    }

    ._maze {
      transform: translate(0, -50%);
    }
  }
</style>
