---
import BaseLayout from './base.astro'
import Header from '~/components/header'
import { SEO } from 'astro-seo'
import { getEntry } from 'astro:content'
import { getImage } from 'astro:assets'

import '@fontsource/plus-jakarta-sans/400.css'
import '@fontsource/plus-jakarta-sans/700.css'
import '@fontsource/plus-jakarta-sans/800.css'
import '~/styles/nohemi.scss'
import '~/styles/base.scss'

export interface Props {
  title?: string | undefined
  description?: string | undefined
}

const { data: site } = await getEntry('site', 'site')
const image = await getImage({ src: site.image, width: 100, height: 100 })
const { title, description } = Astro.props
---

<BaseLayout>
  <!-- Head -->
  <Fragment slot="head">
    <SEO
      title={title ? `${title} \u2014 ${site.title}` : site.title}
      description={description || site.description}
    />
    <link rel="preload" as="image" href={image.src} />
    <slot name="head" />
  </Fragment>

  <!-- Main Body -->
  <Fragment>
    <Header image={image} />
    <main>
      <slot />
    </main>
  </Fragment>
</BaseLayout>
